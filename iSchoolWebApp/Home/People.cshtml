@model iSchoolWebApp.Models.PeopleRootModel

@{
    ViewData["Title"] = "iSchool Faculty & Staff";
}

<h1>@Model.title</h1>
<div>@Model.subTitle</div>
<br/>
<div id="allPeople" style="display:none;">

<div id="tabRoot">
    <ul>
        <li>
            <a href="#facultyTab">Faculty</a>
        </li>
        
        <li>
            <a href ="#staffTab">Staff</a>
        </li>
    </ul>

    <div id="facultyTab">
        @foreach (var faculty in Model.faculty)
        {
            <div class="person">
                <img src="@faculty.imagePath" atl="pic" />
                <h3 style="font-size:small">
                    @faculty.name
                </h3>
                <h3 style="font-size:small">
                    @faculty.title
                </h3>
                <h3 style="font-size:small">
                    @faculty.office
                </h3>
                <h3 style="font-size:small">
                    @faculty.phone
                </h3>
                <h3 style="font-size:small">
                    @faculty.email
                </h3>

                @if (faculty.website != "" && faculty.website != null)
                {
                    <h3 style="font-size:small">
                        <a href="@faculty.website" target="_blank">
                            My website
                        </a>
                    </h3>
                }

                @if (faculty.twitter != "" && faculty.twitter != null)
                {
                    <h3 style="font-size:small">
                        <a href="@faculty.twitter" target="_blank">
                            My Twitter
                        </a>
                    </h3>
                }

                @if (faculty.facebook != "" && faculty.facebook != null)
                {
                    <h3 style="font-size:small">
                        <a href="@faculty.facebook" target="_blank">
                            My Facebook
                        </a>
                    </h3>
                }
            </div>
        }
    </div>

    <div id="staffTab">
        @foreach (var staff in Model.staff)
        {
            <div class="person">
                <img src="@staff.imagePath" atl="pic" />
                <h3 style="font-size:small">
                    @staff.username
                </h3>
                <h3 style="font-size:small">
                    @staff.name
                </h3>
                <h3 style="font-size:small">
                    @staff.tagline
                </h3>
                <h3 style="font-size:small">
                    @staff.title
                </h3>
                <h3 style="font-size:small">
                    @staff.interestArea
                </h3>
                <h3 style="font-size:small">
                    @staff.office
                </h3>
                <h3 style="font-size:small">
                    @staff.phone
                </h3>
                <h3 style="font-size:small">
                    @staff.email
                </h3>

                @if (staff.website != "")
                {
                    <h3 style="font-size:small">
                        <a href="@staff.website" target="_blank">
                            My website
                        </a>
                    </h3>
                }

                @if (staff.twitter != "")
                {
                    <h3 style="font-size:small">
                        <a href="@staff.twitter" target="_blank">
                            My Twitter
                        </a>
                    </h3>
                }

                @if (staff.facebook != "")
                {
                    <h3 style="font-size:small">
                        <a href="@staff.facebook" target="_blank">
                            My Facebook
                        </a>
                    </h3>
                }
            </div>
        }
    </div>
</div>



}

</div>